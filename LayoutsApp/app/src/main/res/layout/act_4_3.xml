<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/hijo1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/mi_rojo">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hijo2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/hijo1"
        android:background="@color/azul_oscuro">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hijo3"
        android:layout_width="450dp"
        android:layout_height="400dp"
        android:layout_below="@+id/hijo2"
        android:background="@color/marron_claro">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hijo4"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_below="@+id/hijo3"
        android:background="@color/amarillo">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hijo5"
        android:layout_width="260dp"
        android:layout_height="300dp"
        android:layout_toRightOf="@+id/hijo4"
        android:layout_alignTop="@+id/hijo4"
        android:background="@color/black">
    </RelativeLayout>


</RelativeLayout>