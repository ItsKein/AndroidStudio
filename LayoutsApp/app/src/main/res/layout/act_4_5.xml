<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cdced4"
    app:rowCount="4"
    app:columnCount="4"
    app:useDefaultMargins="true">

    <!-- Fila 0 -->
    <Button
        android:background="@color/marron_claro"
        app:layout_column="0"
        app:layout_row="0" />

    <Button
        android:background="@color/marron_claro"
        android:text="JUAN"
        app:layout_column="1"
        app:layout_columnSpan="2"
        app:layout_row="0"
        app:layout_columnWeight="1" />
    <Button
        android:background="@color/marron_claro"
        app:layout_row="0"
        app:layout_column="3"
        />

    <!-- BotÃ³n largo -->
    <Button
        android:background="@color/marron_claro"
        app:layout_row="1"
        app:layout_rowSpan="3"
        app:layout_column="0"
        app:layout_columnWeight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <Button
        android:background="@color/marron_claro"
        app:layout_row="1"
        app:layout_column="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"/>

    <Button
        android:background="@color/marron_claro"
        app:layout_row="1"
        app:layout_column=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"/>

    <Button
        android:background="@color/marron_claro"
        app:layout_row="2"
        app:layout_column="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"/>

    <Button
        android:background="@color/marron_claro"
        app:layout_row="2"
        app:layout_column="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"/>

    <Button
        android:background="@color/marron_claro"
        app:layout_row="1"
        app:layout_rowSpan="3"
        app:layout_column="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_columnWeight="1"/>

    <Button
        android:background="@color/marron_claro"
        app:layout_column="1"
        app:layout_columnSpan="2"
        app:layout_row="3"
        app:layout_columnWeight="1" />


</androidx.gridlayout.widget.GridLayout>